{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "brightlocal-reviews/reviews",
  "version": "1.0.0",
  "title": "BrightLocal Reviews",
  "category": "widgets",
  "icon": "star-filled",
  "description": "Display reviews from BrightLocal Showcase Review widget",
  "supports": {
    "html": false
  },
  "attributes": {
    "displayType": {
      "type": "string",
      "default": "grid"
    },
    "showAuthor": {
      "type": "boolean",
      "default": true
    },
    "showDate": {
      "type": "boolean",
      "default": true
    },
    "showSource": {
      "type": "boolean",
      "default": true
    },
    "reviewLabel": {
      "type": "string",
      "default": "all"
    },
    "limitItems": {
      "type": "boolean",
      "default": false
    },
    "itemsPerPage": {
      "type": "number",
      "default": 3
    },
    "showArrows": {
      "type": "boolean",
      "default": true
    }
  },
  "textdomain": "brightlocal-reviews",
  "editorScript": "file:./index.js",
  "render": "file:./render.php",
  "viewScript": "file:./view.js"
}